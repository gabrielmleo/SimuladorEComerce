<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cart_product_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/cart_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/cart_product_image"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/cart_product_image"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/multilines_primary_text_font_size"/>
    <TextView
        android:id="@+id/cart_seller_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@id/cart_product_name"
        android:layout_alignLeft="@id/cart_product_name"
        android:textColor="@color/secondaryTextColor"
        android:textSize="@dimen/multilines_secondary_text_font_size"/>
    <TextView
        android:id="@+id/cart_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cart_seller_product_name"
        android:layout_alignLeft="@id/cart_seller_product_name"
        android:layout_marginTop="2dp"
        android:textColor="@color/secondaryTextColor"
        android:textSize="@dimen/multilines_secondary_text_font_size"/>

    <Button
        android:id="@+id/delete_product"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/delete_mark"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        style="?android:attr/borderlessButtonStyle"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/cart_product_image"
        android:background="@color/divider"
        android:layout_alignLeft="@id/cart_product_name"/>

</RelativeLayout>