<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cart_product_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/cart_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/cart_product_image"
        android:textColor="@color/primaryTextColor"/>
    <TextView
        android:id="@+id/cart_seller_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@id/cart_product_name"
        android:layout_toRightOf="@id/cart_product_image"
        android:textColor="@color/secondaryTextColor"/>
    <TextView
        android:id="@+id/cart_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cart_seller_product_name"
        android:layout_toRightOf="@id/cart_product_image"
        android:layout_marginTop="2dp"
        android:textColor="@color/secondaryTextColor"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/cart_product_image"
        android:background="@color/divider"/>

</RelativeLayout>